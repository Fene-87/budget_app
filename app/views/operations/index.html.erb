<h1>Transactions</h1>
<ul>
  <% @operations.each_with_index do |operation, index| %>
    <li>
      <%= operation.name %>
      <%= operation.amount %>
      <div>
        <%= button_to "Delete", group_operation_path(@group, operation), method: :delete, data: { turbo_frame: "operations" } %>
      </div>
    </li>
  <% end %>
</ul>

<div>
  <button><%= link_to 'New Transaction', new_group_operation_path %></button>
</div>
