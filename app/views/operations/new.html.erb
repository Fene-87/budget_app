<h1>Add a new transaction</h1>
<%= form_with model: @operation, url: group_operations_path(@group) do |form| %>
  <div>
    <%= form.label :name %><br>
    <%= form.text_field :name, required: true, placeholder: 'Expense Name*' %>
  </div>

  <div>
    <%= form.label :amount %><br>
    <%= form.number_field :amount, required: true, placeholder: 'Amount*' %>
  </div>

  <%= form.submit "Create Transaction" %>
<% end %>
